<div class="container-show">
  <div class="banner">
    <%= cl_image_tag(@cocktail.photo, width: 1080, height: 300, crop: :fill) %>
    <h1><%= @cocktail.name %></h1>
    <div class="edit">
      <%= link_to edit_cocktail_path(@cocktail) do %>
        <div>
          <i class="fas fa-pencil-alt"></i>
        </div>
      <% end %>
    </div>
    <div class="delete-cocktail">
      <%= link_to cocktail_path(@cocktail),
                  method: :delete,
                  data: { confirm: "Are you sure?" } do %>
        <div>
          <i class="fas fa-trash-alt"></i>
        </div>
      <% end %>
    </div>
  </div>

  <div class="ingredients-form">
    <div class="ingredients-list">
      <h2>Ingredients list:</h2>
        <ul id="ingredients-list">
        <% @cocktail.doses.each do |dose| %>
          <div id="ingredient<%= dose.id %>">
            <div class="ingredient">
              <li><%= dose.ingredient.name %> ( <%= dose.description %> )</li>
              <div class="delete-ingredient">
                <%= link_to dose_path(dose),
                    method: :delete,
                    data: { confirm: "Are you sure?" },
                    remote: true do %>
                <div>
                  <i class="fas fa-trash-alt"></i>
                </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </ul>
    </div>
    <div class="new-ingredient">
      <h1>Add a new ingredient</h1>
      <%= simple_form_for([@cocktail, @dose], remote: true) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <div class="form-inputs">
          <%= f.input :description,
                label: "amount" %>
          <%= f.association :ingredient, collection: Ingredient.all %>
        </div>

        <div class="form-actions">
          <%= f.button :submit %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="buttons">
    <button class="btn btn-secondary" type="button"><%= link_to 'List of cocktails', cocktails_path %></button>
  </div>
</div>
