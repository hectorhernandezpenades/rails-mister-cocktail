<div class="container-new">
  <div class="video-form">
    <%= video_tag "landing-video.mp4", autoplay: "autoplay", id: "video", muted: true, width: "  100%", loop: "true", :class => "video"%>
  </div>
  <div class="new-form-container">
    <div class="back-to-list back-from-new">
      <%= link_to '< Back to all cocktail list', cocktails_path %>
    </div>
    <div class="new-form">
      <h1>Add a new cocktail</h1>
      <%= simple_form_for [@cocktail] do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <div class="form-inputs">
          <%= f.input :name,
              label: "Enter a cocktail's name" %>
          <%= f.input :photo,
              label: "Add a photo" %>
          <%= f.input :photo_cache, as: :hidden %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, class: "btn-create-cocktail" %>
        </div>
      <% end %>
      </div>
    </div>
</div>
